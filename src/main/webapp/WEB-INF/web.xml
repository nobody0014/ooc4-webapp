<?xml version="1.0" encoding="ISO-8859-1" ?>

<web-app xmlns="http://java.sun.com/xml/ns/j2ee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
         version="2.4">

  <display-name>OOC4-Login</display-name>

  <servlet>
    <servlet-name>home</servlet-name>
    <servlet-class>io.muic.ooc.servlet.HomeServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>login</servlet-name>
    <servlet-class>io.muic.ooc.servlet.LoginServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>user</servlet-name>
    <servlet-class>io.muic.ooc.servlet.UserServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>logout</servlet-name>
    <servlet-class>io.muic.ooc.servlet.LogoutServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>addUser</servlet-name>
    <servlet-class>io.muic.ooc.servlet.AddUserServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>removeUser</servlet-name>
    <servlet-class>io.muic.ooc.servlet.RemoveUserServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>editUser</servlet-name>
    <servlet-class>io.muic.ooc.servlet.EditUserServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>home</servlet-name>
    <url-pattern> /</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>user</servlet-name>
    <url-pattern>/user</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>logout</servlet-name>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>addUser</servlet-name>
    <url-pattern>/user/add</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>removeUser</servlet-name>
    <url-pattern>/user/remove</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>editUser</servlet-name>
    <url-pattern>/user/edit</url-pattern>
  </servlet-mapping>

  <welcome-file-list>
    <welcome-file>home</welcome-file>
  </welcome-file-list>

</web-app>
